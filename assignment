CREATE TABLE Product_info
(  Prod_num int NOT NULL,
   Prod_name char(30),
   Selling_price float,
   Manufacturer_name char(60),
   PRIMARY KEY(Prod_num)
);

CREATE TABLE Client_info
(  Client_num int NOT NULL,
   Client_name char(30),
   Client_address varchar(255),
   City char(20),
   Pincode int,
   The_State char(20),
   Total_balance float,
   PRIMARY KEY(Client_num)
);

CREATE TABLE Order_info
(  Order_num int NOT NULL,
   Order_date date,
   Client_num int,
   Salesman_num int UNIQUE,
   Payment_by_the_party float,
   Delivery_date date
);

CREATE TABLE Salesman_info
(  The_name char(30),
   Salesman_Address varchar(255),
   City char(50),
   Pincode int,
   The_state char(20),
   Salary float,
   Delivery_Date date,
   Total_qty_ordered int,
   Prod_rate float
);


