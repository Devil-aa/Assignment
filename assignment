SELECT Client_name,City
FROM Client_info;

SELECT Product_name
FROM Product_info;

ALTER TABLE Product_info
ADD(new_price float);

SELECT Order_num,Order_date
FROM Order_info;

ALTER TABLE Order_info
ADD(Product_rate float);

ALTER TABLE Order_info
ADD(Total_quantity int);

ALTER TABLE Order_info
ADD(Cancel_date date);

COMMIT;
